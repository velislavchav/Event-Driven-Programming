@model List<Project.Models.ManageGalleryIndex>
@{
    ViewBag.Title = "Index";
}

<style>
    body {
        background-image: url("/Images/Background.jpg");
        background-repeat: no-repeat;
        background-attachment: fixed;
    }
</style>

<h2 align="center" style="color:white">Gallery</h2>
<hr />

<form action="/Gallery/Index" method="get" class="form-inline" style="margin-bottom: 20px; margin-left:40%">
    <input name="searchValue" value="@ViewBag.SearchValue" class="form-control" placeholder="Search by name or author" />
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<div class="row">
    @foreach (var gallery in Model)
    {
    <div class="col-md-3" style="border-width:5px; border-style:groove; padding:10px">
        <a style="color: white" href="/Gallery/Details/@gallery.Id">
            <img src="/Images/@gallery.CoverPath" style="height:250px" class="img-responsive" />
            <h3 align="center"> Name: @gallery.Name <br />Author: @gallery.Author <br> Price: @gallery.Price $</h3>
        </a>
        <a href="" class="btn btn-primary" style="width: 99%;">Buy</a> <br />
    </div>
    }

</div>