@model Project.Models.Details
@{
    ViewBag.Title = "Details";
}

<style>
    body {
        background-image: url("/Images/Background.jpg");
        background-repeat: no-repeat;
        background-attachment: fixed;
    }
</style>

<h2 align="center" style="color:white">Details</h2>
<hr style="color:white"/>
<div class="row" style="width: 100%; margin-top: 40px; color:white">
    <div style="float:left; width: 50%;">
        <img src="~/Images/@Model.CoverPath" style="width: 100%;" class="img-thumbnail" />
    </div>
    <div style="float:left; width: 50%;">
        <h1 class="text-center text-info" style=" color:white">Name: @Model.Name <br> Author: @Model.Author</h1>
        <h3 class="text-center text-info" style=" color:white">Price: @Model.Price $</h3>
        <br />
        <br />
        <div style="text-align: center; width: 100%">
            <a href="/Gallery/AddComment/@ViewBag.Id" class="btn btn-primary" style="text-align: center">Add Comment</a>
            <br /><br />
            <a href="" class="btn btn-primary" style="width: 20%; text-align: center">Buy</a> <br />
        </div>
        <div style="margin:30px; width: 100%">
            @foreach (var comment in Model.Comments)
            {
                <div style="border-style: groove; padding:10px;">
                    <h5 style="font-weight:bold;">Author: @comment.Owner</h5>
                    <p>@comment.Text</p>
                </div>
            }
        </div>
        
    </div>
</div>